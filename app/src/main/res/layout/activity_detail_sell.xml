<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSellActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/sell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/sell_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sell_price"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/sell_price"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sell_name"/>

    <TextView
        android:id="@+id/price_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sell_price"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/sell_price"
        app:layout_constraintTop_toBottomOf="@id/sell_name"
        />

    <TextView
        android:id="@+id/sell_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/sell_count"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/sell_price"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/count_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sell_price"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/sell_count"
        app:layout_constraintTop_toBottomOf="@id/sell_price"
        />

</androidx.constraintlayout.widget.ConstraintLayout>